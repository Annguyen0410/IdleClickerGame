<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/rounded_button_background">

    <TextView
        android:id="@+id/tvDailyRewardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daily Reward!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/accent_gold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/tvDailyRewardDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim your free stardust!"
        android:textColor="@color/text_color_primary"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="24dp"/>

    <Button
        android:id="@+id/btnClaimDailyReward"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Claim"
        android:background="@drawable/modern_button_background"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>
</LinearLayout>
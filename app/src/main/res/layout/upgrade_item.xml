<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/modern_panel_background">

    <ImageView
        android:id="@+id/imgUpgradeIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_star_shower"
        android:contentDescription="Upgrade Icon"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/panel_background"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvUpgradeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upgrade Name (0)"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <ProgressBar
            android:id="@+id/progressUpgrade"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="4dp"
            android:progress="50"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_modern"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyUpgrade"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/modern_button_background"
        android:text="Buy (15)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

</LinearLayout>
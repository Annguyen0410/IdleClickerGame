<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@drawable/rounded_button_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_color_primary"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvOfflineTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You were away for: 8 hours, 15m"
        android:textColor="@color/text_color_secondary"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvOfflineSps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your empire generated: 1.25 Qa/s"
        android:textColor="@color/text_color_secondary"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Stardust Earned:"
        android:textColor="@color/text_color_primary"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/tvOfflineStardust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="36.05 Qi"
        android:textColor="@color/accent_gold"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btnClaimOffline"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Awesome!"
        android:background="@drawable/modern_button_background"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>
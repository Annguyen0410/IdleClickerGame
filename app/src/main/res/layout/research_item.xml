<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/modern_panel_background">

    <ImageView
        android:id="@+id/imgResearchIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_achievement_unlocked"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/panel_background"
        android:padding="8dp"
        app:tint="@color/accent_cyan"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:contentDescription="Research Icon"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvResearchName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Research Name"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvResearchDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="This is the effect of the research."
            android:textColor="@color/text_color_secondary"
            android:textSize="14sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyResearch"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/modern_button_background"
        tools:text="Buy (1.5M)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

</LinearLayout>
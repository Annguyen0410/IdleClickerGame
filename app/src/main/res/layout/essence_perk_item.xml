<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:background="@drawable/modern_panel_background">

    <ImageView
        android:id="@+id/imgPerkIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_cosmic_rift"
        android:background="@drawable/circle_button"
        android:backgroundTint="@color/panel_background"
        android:padding="8dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvPerkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perk Name"
            android:textColor="@color/text_color_primary"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvPerkDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perk Description"
            android:textColor="@color/text_color_secondary"
            android:textSize="14sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnBuyPerk"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/modern_button_background"
        android:text="Buy (1)"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"/>

</LinearLayout>
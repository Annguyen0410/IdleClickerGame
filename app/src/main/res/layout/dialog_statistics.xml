<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/panel_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📊 Game Statistics"
            android:textColor="@color/accent_cyan"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- General Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/panel_background_transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌟 General Statistics"
                    android:textColor="@color/accent_gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvTotalClicks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Clicks: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTotalStardust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Stardust Earned: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvCurrentSps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current SPS: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvPlayTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Play Time: 0 hours"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Prestige Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/panel_background_transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌌 Prestige Statistics"
                    android:textColor="@color/star_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvSingularities"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Singularities: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvCosmicEssence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cosmic Essence: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSupernovas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Supernovas: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvBigCrunches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Big Crunches: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Upgrade Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/panel_background_transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚡ Automation Statistics"
                    android:textColor="@color/accent_cyan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAutoClickerLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Auto-Clicker Level: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTotalUpgrades"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Upgrades Owned: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvResearchCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Research Completed: 0/5"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvSkillPoints"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Skill Points Spent: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Achievement Stats Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/panel_background_transparent"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🏆 Achievement Progress"
                    android:textColor="@color/accent_gold"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAchievementsUnlocked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Achievements Unlocked: 0/10"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ProgressBar
                    android:id="@+id/progressAchievements"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="@color/accent_gold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvRiftsTapped"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cosmic Rifts Tapped: 0"
                    android:textColor="@color/text_color_primary"
                    android:textSize="14sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>